{
  "extends": ["next/core-web-vitals", "prettier"],
  "plugins": ["arca"],
  "rules": {
    "prefer-const": "error",
    "arca/import-ordering": [
      "error",
      { "sections": ["^~/", "^\\.\\./", "^\\./"] }
    ],
    "arca/newline-after-import-section": [
      "error",
      { "sections": ["^~/", "^\\.\\./", "^\\./"] }
    ]
  }
}
